<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Name</fullName>
    <active>true</active>
    <errorConditionFormula>! REGEX( Name , &quot;[a-z A-Z]+&quot;)</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Please Enter text only, Numbers are not allowed</errorMessage>
</ValidationRule>
