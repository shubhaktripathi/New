<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Admission_Date</fullName>
    <active>true</active>
    <errorConditionFormula>if( year(Admission_Date__c ) &lt; year(today())-10, true, false)</errorConditionFormula>
    <errorDisplayField>Admission_Date__c</errorDisplayField>
    <errorMessage>Please enter the date not older than 10 years</errorMessage>
</ValidationRule>
